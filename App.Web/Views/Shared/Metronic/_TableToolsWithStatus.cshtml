@model TableTools
@{
    var prefix = !string.IsNullOrEmpty(Model?.tableName) ? (Model?.tableName + "-") : "";
}
<div class="m-accordion m-accordion--default m-accordion--toggle-arrow" id="@(prefix)m_accordion_5" role="tablist">

    <div class="m-accordion__item m-accordion__item--brand">
        <div class="m-accordion__item-head collapsed" role="tab" id="@(prefix)m_accordion_5_item_3_head" data-toggle="collapse" href="#m_accordion_5_item_3_body" aria-expanded="false">
            <span class="m-accordion__item-icon"><i class="fa flaticon-more-v5"></i></span>
            <span class="m-accordion__item-title">Table Options</span>
            <span class="m-accordion__item-mode"></span>
        </div>
        <div class="m-accordion__item-body collapse" style="overflow:visible;" id="@(prefix)m_accordion_5_item_3_body" role="tabpanel" aria-labelledby="m_accordion_5_item_3_head" data-parent="#m_accordion_5">
            <div class="m-accordion__item-content">
                <div class="row">
                    <div class="form-group m-form__group   col-md-12" id="@(prefix)search">
                        <div class="m-input-icon m-input-icon--left">
                            <input type="text" id="@(prefix)searchinput" class="form-control m-input" placeholder="Search" name="searchinput" value="">
                            <span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-search"></i></span></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group m-form__group   col-md-12" id="@(prefix)status">
                        <label>Filter By Status</label>
                        <select id="status-filter-option" name="searchstatus" class="form-control m-input">
                            <option value="">All</option>
                            <option value="false">Saved</option>
                            <option value="true">Draft</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    @Html.FormFieldPartial(null, new DateTimeFieldSetting()
                    {
                        InputName = "",
                        Label = "From",
                        HelpText = "",
                        Placeholder = "Created Date",
                        CssClass = "col-md-6",
                        Style = DateTimeFieldStyle.DateOnly,
                        HtmlId = prefix + "dateFrom"

                    })

                    @Html.FormFieldPartial(null, new DateTimeFieldSetting()
                    {
                        InputName = "",
                        Label = "To",
                        HelpText = "",
                        Placeholder = "Created Date",
                        CssClass = "col-md-6",
                        Style = DateTimeFieldStyle.DateOnly,
                        HtmlId = prefix + "dateTo"

                    })
                </div>

                @if (Model?.Tools != null)
                {
                    @(Model?.Tools(null))
                }

                <div class="row">

                    <div class="form-group  m-form__group col-md-12">
                        <label>Columns</label>
                        <select class="form-control" id="@(prefix)columns" multiple></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8" id="@(prefix)buttons">
                    </div>
                    <div class="col-md-4" style="text-align:right">
                        <label>Show Entries</label>
                        <select class="rows form-control" id="@(prefix)length" style="display:unset;width:7rem;margin-right:0px">
                            <option value="10" selected>10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="all">All</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
